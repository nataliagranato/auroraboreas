            "label": "Run Generators",
            "type": "shell",
            "command": "mise",
            "args": [
                "run",
                "generators"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []

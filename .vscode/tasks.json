        {
            "label": "Start Observability Stack",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "up",
                "-d"
            ],
            "options": {
                "cwd": "${workspaceFolder}/labs"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Observability Stack",
            "type": "shell",
            "command": "docker-compose",

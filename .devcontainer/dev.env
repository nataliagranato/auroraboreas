# Development Configuration for Aurora Boreas
# This file contains development-specific settings

# Go Configuration
export GOPROXY=https://proxy.golang.org,direct
export GOSUMDB=sum.golang.org
export CGO_ENABLED=0
export GOOS=linux
export GOARCH=amd64

# Application Configuration
export EASYZAP_LOG_TYPE=fmt
export FEATURE_FLAGS_FILEPATH=./flags.properties

# Development Tools
export GOLANGCI_LINT_VERSION=v1.62.2
export GORELEASER_VERSION=latest
export GOTESTSUM_VERSION=latest

# Observability
export OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
export OTEL_SERVICE_NAME=aurora-boreas
export OTEL_SERVICE_VERSION=dev

# Docker Configuration
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

# Development Convenience
export EDITOR=vim
export PAGER=less

{
  "name": "Aurora Boreas Development Environment",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.23-bookworm",
  "features": {
    "ghcr.io/devcontainers-extra/features/mise:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "2"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "lts",
      "nvmVersion": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hverlin.mise-vscode",
        "golang.go",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "tamasfe.even-better-toml",
        "ms-vscode.vscode-docker",
        "ms-vscode.test-adapter-converter",
        "GitHub.vscode-pull-request-github",
        "ms-vscode.hexeditor",
        "github.vscode-github-actions",
        "eamodio.gitlens",
        "bradlc.vscode-tailwindcss",
        "formulahendry.code-runner",
        "streetsidesoftware.code-spell-checker",
        "wayou.vscode-todo-highlight",
        "gruntfuggly.todo-tree"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.formatTool": "goimports",
        "go.lintTool": "golangci-lint",
        "go.testFlags": ["-v"],
        "go.coverageOptions": "showCoveredCodeOnly",
        "go.coverageDecorator": {
          "type": "gutter",
          "coveredHighlightColor": "rgba(64,128,128,0.5)",
          "uncoveredHighlightColor": "rgba(128,64,64,0.25)"
        },
        "files.exclude": {
          "**/coverage.out": true,
          "**/bin/": true,
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspaces/auroraboreas/.git,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "GOPROXY": "https://proxy.golang.org,direct",
    "GOSUMDB": "sum.golang.org",
    "CGO_ENABLED": "0",
    "GOOS": "linux",
    "GOARCH": "amd64"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/go/bin:/go/bin"
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "mise install && mise run setup",
  "forwardPorts": [8080, 3000, 9090, 3001, 16686],
  "portsAttributes": {
    "8080": {
      "label": "Aurora Boreas API",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "ignore"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "ignore"
    },
    "3001": {
      "label": "Tempo",
      "onAutoForward": "ignore"
    },
    "16686": {
      "label": "Jaeger",
      "onAutoForward": "ignore"
    }
  },
  "shutdownAction": "stopContainer"
}